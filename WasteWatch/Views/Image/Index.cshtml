        <label for="files">Choose Image(s)</label>
        <input type="file" class="form-control-file" id="files" name="files" multiple>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary" id="uploadButton" disabled>Upload Image(s)</button>
}


